<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<VBox fx:id="base" alignment="TOP_LEFT" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.wellnessapp.controller.WellnessTipController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <Label text="Welcome to your daily wellness tip! Find a moment of calm and inspiration here. Let's nurture your well-being together, one tip at a time."
         wrapText="true"/>
    <TextArea fx:id="wellnesstips"
              wrapText="true"
              editable="false"
    />

  <HBox alignment="BOTTOM_RIGHT" spacing="10.0">
    <Button fx:id="Home" text="Home"  onAction="#onHomeButtonClick"/>
  </HBox>

  <Label fx:id="welcomeText"/>

  <HBox alignment="BOTTOM_CENTER">
    <Button fx:id="contactUsButton" text="Contact Us!" onAction="#onContactusButtonClick"/>
    <Label fx:id="contactUsLabel" alignment="BOTTOM_CENTER"/>
  </HBox>
</VBox>